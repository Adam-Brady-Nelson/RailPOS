{
  "name": "railpos",
  "version": "0.1.0",
  "private": true,
  "description": "A modern POS system built with React, Vite, Electron, and SQLite.",
  "author": "Adam Brady-Nelson",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELC-BUILD,ELECTRON -c bgBlue.bold,bgYellow.bold,bgMagenta.bold \"cross-env VITE_DEV_SERVER=true vite\" \"tsup --watch\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER=true electron .\"",
    "build": "tsup && vite build",
    "preview": "vite preview",
    "electron": "npm run build && electron .",
    "package": "electron-builder",
    "package:win": "electron-builder -w",
    "package:linux": "electron-builder -l",
    "package:mac": "electron-builder -m",
    "package:all": "electron-builder -wml",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "npm run lint && npm run typecheck"
  },
  "build": {
    "productName": "RailPOS",
    "appId": "com.example.reactviteelectron",
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "directories": {
      "buildResources": "build"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "Rail"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0-canary-7118f5dd7-20230705",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.45.0",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
